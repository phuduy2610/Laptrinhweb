<!-- Include the Etalage files -->
					<link rel="stylesheet" href="../stylesheets/etalage.css">
					<script src="../javascripts/jquery.etalage.min.js"></script>
				<!-- Include the Etalage files -->
                    <script src="../javascripts/thumbnail.js"></script>

<div class="main">
    <div class="shop_top">
        <div class="container">
            <div class="row">
                <div class="col-md-9 single_left">
                    <div class="single_image">
                        <ul id="etalage">
                            <li>
                                <a href="optionallink.html">
                                    <img class="etalage_thumb_image" src="{{game.cover}}" />
                                    <img class="etalage_source_image" src="{{game.cover}}" />
                                </a>
                            </li>
                            {{!-- <li>
                                <img class="etalage_thumb_image" src="{{game.cover}}" />
                                <img class="etalage_source_image" src="{{game.cover}}" />
                            </li> --}}
                        </ul>
                    </div>
                    <!-- end product_slider -->
                    <div class="single_right">
                        <h3>{{game.title}}</h3>
                        <p class="m_10">{{game.Description}}</p>
                        <div class="btn_form">
                            <form>
                                <input type="submit" value="buy now" title="">
                            </form>
                        </div>
                    </div>
                    <div class="clear"> </div>
                </div>
                <div class="col-md-3">
                    <div class="box-info-product">
                        <p class="price2">{{game.basePrice}}</p>
                        <ul class="prosuct-qty">
                            <span>Quantity:</span>
                            <select>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                            </select>
                        </ul>
                        <button type="submit" name="Submit" class="exclusive">
                            <span>Add to cart</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="desc">
                <h4>Description</h4>
                <p>{{game.Description}}</p>
            </div>
            <h4 class="m_11">Related Products in the same Category</h4>
            <div class="row">
                {{#each games}}
                <div class="col-md-2">
                    <img src="{{cover}}" class="img-responsive" alt="" />
                    <div class="shop_desc"><a href="{{id}}">
                        </a>
                        <h3><a href="single.html"></a><a href="{{id}}">{{title}}</a></h3>
                        <span class="reducedfrom">{{basePrice}}</span>
                        <span class="actual">$12.00</span><br>
                        <ul class="buttons">
                            <li class="shop_btn"><a href="{{id}}">Read More</a></li>
                            <div class="clear"> </div>
                        </ul>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>