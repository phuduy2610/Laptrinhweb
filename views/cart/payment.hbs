<div class="alert alert-success complete-payment-alert" role="alert" style="text-align: center;">
    <strong>Success!</strong> Your payment has been completed.
    <button type="button" class="close complete-payment-close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="alert alert-danger complete-payment-fail" role="alert" style="text-align: center;">
    <strong>Fail!</strong> Please enter all required information .
    <button type="button" class="close complete-payment-fail-close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="container">

    <div class="py-5 text-center">

        <h2>Checkout</h2>
        <p class="lead">Complete your payment here !</p>
    </div>

    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">{{totalQty}}</span>
            </h4>
            <ul class="list-group mb-3">
                {{#each products}}
                <div>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">{{item.title}}</h6>
                        </div>
                        <span class="text-muted">{{price}}$</span>
                    </li>
                </div>
                {{/each}}
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>{{totalPrice}}$</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Billing address</h4>
            <div class="needs-validation">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">First name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Enter your first name"
                            value="">
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Last name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Enter your last name"
                            value="">
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="Enter your current address">
                    <div class="invalid-feedback">
                        Please enter your shipping address.
                    </div>
                </div>


                <h4 class="mb-3 pt-5">Delivery method</h4>

                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input delivery-method" name="optradio"
                            id="directly">Receive at store
                    </label>
                </div>
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input delivery-method" name="optradio" id="fast">Fast delivery
                    </label>
                </div>
                <div class="form-check-inline ">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input delivery-method" name="optradio"
                            id="economical">Economical delivery
                    </label>
                </div>


                <hr class="mb-4 pt-5">
                <button class="btn btn-primary btn-lg btn-block complete-payment">Complete payment
                </button>
            </div>
        </div>
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">

    </footer>
</div>