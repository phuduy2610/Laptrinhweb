<div class="main">
    <div class="shop_top">
        <div class="container">
            <div class="row shop_box-top">
                {{#each games}}
                {{#when @index '<' 4}}
                <div class="col-md-3 shop_box"><a href="single.html">
                        <img src="{{cover}}" class="img-responsive" alt="" />
                        <span class="new-box">
                            <span class="new-label">New</span>
                        </span>
                        <span class="sale-box">
                            <span class="sale-label">Sale!</span>
                        </span>
                        <div class="shop_desc">
                            <h3><a href="#">{{title}}</a></h3>
                            <span class="reducedfrom">{{basePrice}}</span>
                            <span class="actual">$12.00</span><br>
                            <ul class="buttons">
                                <li class="cart"><a href="#">Add To Cart</a></li>
                                <li class="shop_btn"><a href="#">Read More</a></li>
                                <div class="clear"> </div>
                            </ul>
                        </div>
                    </a></div>
                {{/when}}
                {{/each}}
            </div>
            <div class="row">
                {{#each games}}
                {{#when @index '>' 3}}
                <div class="col-md-3 shop_box"><a href="single.html">
                        <img src="{{cover}}" class="img-responsive" alt="" />
                        <span class="new-box">
                            <span class="new-label">New</span>
                        </span>
                        <div class="shop_desc">
                            <h3><a href="#">{{title}}</a></h3>
                            <span class="actual">{{basePrice}}</span><br>
                            <ul class="buttons">
                                <li class="cart"><a href="#">Add To Cart</a></li>
                                <li class="shop_btn"><a href="#">Read More</a></li>
                                <div class="clear"> </div>
                            </ul>
                        </div>
                    </a></div>
                {{/when}}
                {{/each}}
            </div>
        </div>
    </div>
</div>